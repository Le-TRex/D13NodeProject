<h1>Modifier un rapport de bug</h1>
<form action="/bugs/update" method="POST" class="formCard">
  <div>
    <div>
      <label for="title">Name</label>
      <input type="text" id="title" name="title" value="<%=bug.title%>">
    </div>

    <div class="textarea">
      <label for="reproSteps">Description</label>
      <textarea type="text" rows="3" id="reproSteps" name="reproSteps"><%=bug.reproSteps%></textarea>
    </div>

    <div>
      <label for="priority">Priorit√©</label>
      <input type="number" name="priority" for="priority" min="1" max="5" value="<%=bug.priority%>">
    </div>

    <input type="hidden" name="_id", for="_id" value="<%=bug._id%>">
    <input type="hidden" name="projectId", for="projectId" value="<%=bug.projectId%>">
  </div>

	<div class="buttons">
		<a href="/projects" class="button">Back</a>
		<button type="submit">Modifier</button>
	</div>
</form>